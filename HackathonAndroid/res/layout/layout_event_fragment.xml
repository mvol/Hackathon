<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#CC133C">

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:orientation="vertical"
      android:background="#FF0000"
      >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:text="Kursbezogene Treffen"
        android:paddingTop="2dp"
        android:paddingLeft="8dp"
        android:paddingBottom="2dp"
        android:textColor="#CC133C"
        android:textStyle="bold"
        android:textSize="16dp"
        android:id="@+id/courseHeading"
        />

    <LinearLayout
        android:id="@+id/courseList"
        android:showDividers="middle"
        android:divider="?android:attr/listDivider"
        android:orientation="vertical"
        android:background="#967B80"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:text="Sonstige Treffen"
        android:paddingTop="2dp"
        android:paddingLeft="8dp"
        android:paddingBottom="2dp"
        android:textColor="#CC133C"
        android:textStyle="bold"
        android:textSize="16dp"
        android:id="@+id/miscHeading"
        />

    <LinearLayout
        android:id="@+id/miscList"
        android:showDividers="middle"
        android:background="#967B80"
        android:divider="?android:attr/listDivider"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </LinearLayout>

  </LinearLayout>

</ScrollView>
